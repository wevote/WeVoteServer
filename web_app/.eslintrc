{
  "extends": "airbnb",
  "env": {
    "es6": true
  },
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "strict": 0,
    "quotes": [2, "single"],
    "comma-dangle": [2, "never"],
    "no-eq-null": 0,
    "jsx-quotes": [2, "prefer-double"],

    "react/jsx-no-undef": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-boolean-value": 0,
    "react/no-did-mount-set-state": 2,
    "react/no-did-update-set-state": 2,
    "react/no-unknown-property": 2,
    "react/prop-types": 2,
    "react/react-in-jsx-scope",
    "react/self-closing-comp": 2,
    "react/wrap-multilines": 2,
    "react/no-did-mount-set-state": 0,
    "react/sort-comp": [
      2, {
        "order": [
          "displayName",
          "propTypes",
          "contextTypes",
          "childContextTypes",
          "mixins",
          "statics",
          "defaultProps",
          "getDefaultProps",
          "getInitialState",
          "getChildContext",
          "componentWillMount",
          "componentDidMount",
          "componentWillReceiveProps",
          "shouldComponentUpdate",
          "componentWillUpdate",
          "componentDidUpdate",
          "/^on.+$/",
          "/^get.+$/",
          "/^render.+$/",
          "/^.+$/",
          "render"
        ]
      }
    ]
  }
}
